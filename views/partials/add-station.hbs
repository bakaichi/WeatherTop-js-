<form action="/dashboard/addstation" method="POST">
    <div class="field">
        <label class="label">Station Name</label>
        <input class="input" type="text" placeholder="Enter Station Name" name="name" required>
        <input class="input" type="text" placeholder="Enter Latitude" name="latitude" required>
        <input class="input" type="text" placeholder="Enter Longitude" name="longitude" required>
    </div>
    <button class="button is-link">Add Station</button>
</form>