<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Code</th>
            <th>Temp</th>
            <th>Wind Speed</th>
            <th>Pressure</th>
            <th>Wind Direction</th>
        </tr>
    </thead>
    <tbody>
        {{#each station.readings}}
        <tr>
            <td>
                {{code}}
            </td>
            <td>
                {{temp}}
            </td>
            <td>
                {{windspeed}}
            </td>
            <td>
                {{pressure}}
            </td>
            <td>
                {{windDirection}}
            </td>
            <td>
                <a href="/station/{{../station._id}}/deletereading/{{id}}" class="button">{{>icons/delete}}</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>