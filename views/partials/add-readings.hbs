<form class="box" action="/station/{{station._id}}/addreadings" method="POST">
  <label>Enter Weather Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Weather Code" name="code" required>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Temperature in C" name="temp" required>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Wind Speed km/h" name="windspeed" required>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Pressure" name="pressure" required>
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Wind Direction" name="windDirection" required>
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Readings</button>
</form>